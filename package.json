{
  "name": "threejs-viewer",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/threejs-viewer.cjs",
  "module": "./dist/threejs-viewer.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/threejs-viewer.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/threejs-viewer.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "dev:demo": "vite --mode demo --host",
    "build": "tsc -b && vite build",
    "build:lib": "tsc --emitDeclarationOnly --declaration --outDir dist && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": ">=0.150.0"
  },
  "dependencies": {
    "three-stdlib": "^2.36.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@fast-check/vitest": "^0.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^28.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.182.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^4.0.18"
  }
}
